        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ivFoto"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical" />

        <TextView
